@model BSIT3L_Movies.Models.MovieViewModel


<!DOCTYPE html>
<html>
<head>
    <title>Movie</title>
</head>
<body>
    <h2>Movie Details</h2>
    <div class="movie-details-container-movie">
        <div class="image-container-movie">
            <img src="@Model.ImageUrl" alt="Movie Image" />
        </div>
        <div class="movie-details-movie">
            <p>Movie ID: @Model.Id</p>
            <p>Movie Name: @Model.Name</p>
            <p>Distributed by: @Model.Distributed</p>
            <p>Rating: @Model.Rating</p>
            <p>Release Year: @Model.ReleaseYear</p>
            <p>Genre: @Model.Genre</p>
            <!-- Add a link to the YouTube video -->
            @if (!string.IsNullOrEmpty(Model.YouTubeUrl))
            {
                <p>
                    <a href="@Model.YouTubeUrl" target="_blank">Watch on YouTube</a>
                </p>
            }
        </div>
    </div>
</body>
</html>
